-- note: this file has less tokens
-- because it has less examples
 
types={}
objects={}

-- base type
object = {}

function object:new (spr)
	local obj = {spr=spr,
		new= function (self,x,y)
			local obj = {x=x,y=y,id=x..","..y}
			setmetatable(obj,self)
			self.__index = self
			add(objects,obj)
			return obj
		end
		}
	setmetatable(obj,self)
	self.__index = self
	types[spr]=obj
	return obj
end

-- orb is an object type
orb = interactable:new(2)

-- meme is an orb object	
meme = orb:new(5,7)
